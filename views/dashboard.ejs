<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="p-4">
  <div class="text-center mb-4">
    <h1>Welcome, <%= user.fullName %>!</h1>
  </div>
  <div class="text-end mb-4">
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>

  <div class="container mt-4">
    <div class="row">
      <% files.forEach(file => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm" 
               style="cursor: pointer; background-color: white;" 
               onclick="showFileActions('<%= file.id %>', '<%= file.name %>', '<%= file.type %>', <%= file.size %>, '<%= file.owner %>')">
            <div class="card-body text-center">
              <h5 class="card-title"><%= file.name %></h5>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Centered Upload Button -->
  <div class="text-center mt-4">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">Upload File</button>
  </div>

  <!-- File Actions Modal -->
  <div class="modal fade" id="fileActionsModal" tabindex="-1" aria-labelledby="fileActionsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="fileActionsModalLabel">File Actions</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p><strong>File Name:</strong> <span id="fileName"></span></p>
          <p><strong>File Type:</strong> <span id="fileType"></span></p>
          <p><strong>File Size:</strong> <span id="fileSize"></span></p>
          <p><strong>Owner:</strong> <span id="fileOwner"></span></p>
          <button class="btn btn-warning w-100" data-bs-toggle="modal" data-bs-target="#transferModal">Transfer Ownership</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Upload Modal -->
  <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="uploadModalLabel">Upload File</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="file" class="form-label">Choose a file to upload:</label>
              <input type="file" name="file" id="file" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Upload</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Transfer Ownership Modal -->
  <div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="transferModalLabel">Transfer Ownership</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="transferForm" method="POST">
            <div class="mb-3">
              <label for="newOwner" class="form-label">Select New Owner:</label>
              <select name="newOwner" id="newOwner" class="form-select">
                <% users.forEach(u => { %>
                  <% if (u.id !== user.id) { %> <!-- Exclude the current user -->
                    <option value="<%= u.id %>"><%= u.fullName %></option>
                  <% } %>
                <% }) %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Transfer</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function showFileActions(fileId, fileName, fileType, fileSize, fileOwner) {
      // Populate modal fields with file details
      document.getElementById('fileName').textContent = fileName;
      document.getElementById('fileType').textContent = fileType;
      document.getElementById('fileSize').textContent = (fileSize / 1024).toFixed(2) + ' KB';
      document.getElementById('fileOwner').textContent = fileOwner;

      // Set the transfer form action dynamically
      document.getElementById('transferForm').action = `/transfer/${fileId}`;

      // Show the file actions modal
      const fileActionsModal = new bootstrap.Modal(document.getElementById('fileActionsModal'));
      fileActionsModal.show();
    }

    // Handle the transfer form submission
    document.getElementById('transferForm').onsubmit = function (e) {
      e.preventDefault(); // Prevent default form submission behavior

      const formData = new FormData(this); // Collect form data
      const fileId = this.action.split('/').pop(); // Extract file ID from the form action

      // Send the transfer request to the server
      fetch(`/transfer/${fileId}`, {
        method: 'POST',
        body: formData
      })
        .then(response => {
          if (!response.ok) {
            throw new Error("Failed to transfer the file.");
          }
          return response.json();
        })
        .then(() => {
          // Reload the page after a successful transfer
          location.reload();
        })
        .catch(error => {
          console.error("Error transferring file:", error);
        });
    };
  </script>
</body>
</html>
